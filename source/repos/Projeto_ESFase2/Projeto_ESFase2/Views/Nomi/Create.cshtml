@model Projeto_ESFase2.Models.Nominee

@{
    ViewData["Title"] = "Create";
    Layout = "_UserAuthenticated";
}

<style>
    a{
        color:black;
    }
</style>

<h1><b>Create Nominee</b></h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @ViewData["Error"]
        @ViewData["ErrorNomi"]
        <a asp-action="Index">View Nominee List</a>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CompetitionNominees" type="hidden" class="form-control" />
                <span asp-validation-for="CompetitionNominees" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Projeto_ESFase2.Models.User

<style>
    a {
        color: white;
    }
    
    h1 {
        color: white;
    }

    label {
        color: white;
    }
    .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #74787a;
        color: #ffffff;
        font-size: 20px;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 30px;
    }

        .button:hover {
            background-color: #494b4d;
            color: #ffffff
        }
</style>






<div class="registerbox">
    <br/>
    <h1 style="text-align: center;">Registo</h1>
    <div class="row">
        <div class="content">
            <div class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @if (ViewData["Error"] != null)
                    {
                        <div class="error-box">
                            <p><strong>Erro:</strong> @ViewData["Error"].ToString()</p>
                        </div>
                    }
                    <div class="form-group" style="width: 270%;">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width: 270%;">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width: 270%;">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAdmin"/> @Html.DisplayNameFor(model => model.IsAdmin)
                        </label>
                    </div>
                    <div class="form-group">
                        <input asp-for="CompetitionUsers" type="hidden" class="form-control"/>
                        <span asp-validation-for="CompetitionUsers" class=" text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create Account" class="button"/>
                    </div>
                </form>
            </div>


            <div>
                <a asp-action="Logout">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

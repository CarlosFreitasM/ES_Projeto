@model Projeto_ESFase2.Models.User

@{
    ViewBag.Title = "Register";
}


<h2>Register</h2>

<body>
    <div>
        <form>
            <div>
                <input asp-for="UserName" type="text" id="username">
                <label asp-for="UserName" >Username</label>
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <input asp-for="Email" type="text" id="email">
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <input asp-for="Password" type="text" id="password">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input asp-for="ConfirmPassword" type="text" id="confirmpassword">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <button type="submit">Criar conta</button>
            </div>
        </form>
    </div>
</body>